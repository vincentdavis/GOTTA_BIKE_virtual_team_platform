# Django
DEBUG=true
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
# Maybe not needed
CORS_ALLOWED_ORIGINS=https://example.com
# not needed in production
INTERNAL_IPS=127.0.0.1

# S3 Storage (Railway.app - only set in production)
 AWS_S3_ENDPOINT_URL=https://storage.railway.app
 AWS_S3_REGION_NAME=auto
 AWS_ACCESS_KEY_ID=your-access-key-id
 AWS_SECRET_ACCESS_KEY=your-secret-access-key
 AWS_STORAGE_BUCKET_NAME=your-bucket-name

# Database (optional - defaults to SQLite in development)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Discord OAuth (for user authentication)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Google Service Account (base64-encoded JSON credentials)
GOOGLE_CREDENTIALS_BASE64=your-base64-encoded-credentials

LOGFIRE_ENVIRONMENT="SOME_ENVIRO"
LOGFIRE_TOKEN="123456"